@using MyRent.Models
@{
    ViewBag.Title = "Index";
}

<h2>Counties</h2>

@(Html.DevExtreme().DataGrid<MyRent.Models.County>()
    .DataSource(ds => ds.WebApi()
        .RouteName("CountiesDataApi")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.Id);

        columns.AddFor(m => m.Code);

        columns.AddFor(m => m.Name);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
        .ConfirmDelete(true)
        .Mode(GridEditMode.Form)
    )
)